<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/extend_my_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@null" />

    <TextView
        android:id="@+id/extend_my_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_image"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/extent_my_plot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição: "
        android:paddingBottom="24dp"
        android:paddingLeft="16dp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:layout_below="@+id/extend_my_title"
        android:layout_toRightOf="@+id/extend_my_title"
        android:layout_toEndOf="@+id/extend_my_title" />
    <TextView
        android:id="@+id/extent_my_wirter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diretor: "
        android:paddingBottom="24dp"
        android:paddingLeft="16dp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:layout_below="@+id/extent_my_plot"
        android:layout_alignRight="@+id/extent_my_plot"
        android:layout_alignEnd="@+id/extent_my_plot" />

    <TextView
        android:id="@+id/extent_my_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actor: "
        android:paddingBottom="24dp"
        android:paddingLeft="16dp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:layout_below="@+id/extent_my_wirter"
        android:layout_alignRight="@+id/extent_my_wirter"
        android:layout_alignEnd="@+id/extent_my_wirter" />

    <Button
        android:id="@+id/extend_my_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:text="Voltar"
        android:layout_below="@+id/extent_my_actor"
        android:layout_toRightOf="@+id/extent_my_actor"
        android:layout_toEndOf="@+id/extent_my_actor" />

    <Button
        android:id="@+id/extend_my_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excluir"
        android:layout_alignBaseline="@+id/extend_my_button"
        android:layout_alignBottom="@+id/extend_my_button"
        android:layout_toRightOf="@+id/extend_my_button"
        android:layout_toEndOf="@+id/extend_my_button"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp" />


</RelativeLayout>