<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="10dp"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/my_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@null" />

        <TextView
            android:id="@+id/my_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_image"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

    <TextView
        android:id="@+id/my_description"
        android:layout_below="@+id/my_title"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingBottom="24dp"
        android:textSize="14sp"/>
        <Button
            android:id="@+id/adicionar"
            android:layout_below="@+id/my_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Adicionar"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp" />

        <Button
            android:id="@+id/expandir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Expandir"
            android:layout_alignBaseline="@+id/adicionar"
            android:layout_alignBottom="@+id/adicionar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="80dp"
            android:layout_marginEnd="80dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>