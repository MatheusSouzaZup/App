<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="10dp"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/my_image_saved"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@null" />
        <ImageButton
            android:id="@+id/imageButton_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingTop="15dp"
            app:srcCompat="@drawable/ic_heart_full"
            android:layout_below="@+id/my_image_saved"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/my_title_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton_saved"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:textColor="@color/primary_text"
            android:textSize="24sp" />

    <TextView
        android:id="@+id/my_description_saved"
        android:layout_below="@+id/my_title_saved"
        android:textColor="@color/secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingBottom="24dp"
        android:textSize="14sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>